<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="survey"
            type="com.nimble.android.api.response.survey.Survey" />

        <variable
            name="clickListener"
            type="com.nimble.android.features.home.SurveyListAdapter.OnClickListener" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{()-> clickListener.onClick(survey) }">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:backgroundImage="@{survey.attributes.coverImageUrl}"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_background_overlay"/>

    </FrameLayout>
</layout>
