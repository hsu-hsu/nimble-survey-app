<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="survey"
            type="com.nimble.android.api.response.survey.Survey" />

        <variable
            name="clickListener"
            type="com.nimble.android.home.SurveyListAdapter.OnClickListener" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:onClick="@{()-> clickListener.onClick(survey) }">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundImage="@{survey.attributes.coverImageUrl}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/large_margin">

            <TextView
                android:id="@+id/title"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{survey.attributes.title}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="@{survey.attributes.description}"
                    android:layout_weight="4"
                    android:layout_marginRight="@dimen/small_margin"/>

                <Button
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/detail_button"
                    android:layout_marginRight="@dimen/small_margin"/>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>
